rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Users collection - users can read/write their own data
    match /users/{uid} {
      allow read, write: if request.auth != null && request.auth.uid == uid;
      // Allow reading other users' basic info for display purposes
      allow read: if request.auth != null;
    }
    
    // Products collection - allow reading all products, creating new ones
    match /products/{productId} {
      allow read: if true; // Anyone can read products
      allow create: if request.auth != null;
      allow update, delete: if request.auth != null && request.auth.uid == resource.data.userId;
    }
    
    // Orders collection - users can read/write orders they're involved in
    match /orders/{orderId} {
      allow read, write: if request.auth != null && 
        (request.auth.uid == resource.data.buyerId || request.auth.uid == resource.data.sellerId);
      allow create: if request.auth != null;
    }
    
    // Offers collection - users can read/write offers they're involved in
    match /offers/{offerId} {
      allow read, write: if request.auth != null && 
        (request.auth.uid == resource.data.buyerId || request.auth.uid == resource.data.sellerId);
      allow create: if request.auth != null;
    }
    
    // Chats collection - users can read/write chats they're involved in
    match /chats/{chatId} {
      allow read, write: if request.auth != null && 
        (request.auth.uid == resource.data.buyerId || request.auth.uid == resource.data.sellerId);
      allow create: if request.auth != null;
    }
    
    // Messages collection - users can read/write messages in chats they're involved in
    match /messages/{messageId} {
      allow read, write: if request.auth != null;
    }
    
    // Notifications collection - users can read/write their own notifications
    match /notifications/{notificationId} {
      allow read, write: if request.auth != null;
    }
  }
}


